<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.level500.ub.ubattendance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ub_attendance"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ub_attendance"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentLecturerLogin"
            android:label="Choose Option" />
        <activity
            android:name=".Student"
            android:label="@string/title_activity_student" />
        <activity
            android:name=".Lecturer"
            android:label="@string/title_activity_lecturer" />
        <activity
            android:name=".StudentRegister"
            android:label="Register" />
        <activity
            android:name=".LecturerCourse"
            android:label="Lecturer Courses" />

        <activity
            android:name=".StudentCourse"
            android:label="Student Courses" />

        <activity
            android:name=".SingleCourse"
            android:label="Course" />
        <activity
            android:name=".LecturerRecords"
            android:label="View Records" />

        <activity
            android:name=".Settings"
            android:label="@string/title_settings" />

        <activity
            android:name=".MoreActivity"
            android:label="More" />

        <activity
            android:name=".About_Help"
            android:label="Help &amp; About" />
    </application>

</manifest>